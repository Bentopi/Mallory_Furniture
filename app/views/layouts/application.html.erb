<!DOCTYPE html>
<html>
    <head>
        <title>Mallory Furniture!</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <div class="container-fluid">
            <a href="/">
                <div class="row header">
                    <div class="col-xs-12 text-center">
                        <h1 class="company_name">Mallory Furniture</h1>
                    </div>
                </div>
            </a>
        </div>

            <%= yield %>
        <div class="footer_pad"></div>
        <div class="container-fluid">
            <footer>
                <div class="row footer">
                    <% @unique_categories.each do |category| %>
                    <div class="col-xs-2 categories text-center">
                        <h3>
                            <%= link_to category.titlecase, category_path(id: category), class:"footer_links" %></h3>
                    </div>
                    <% end %>
                </div>

            </footer>
        </div>
    </body>
</html>
